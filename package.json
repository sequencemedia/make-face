{
  "name": "@sequencemedia/make-face",
  "version": "1.1.0",
  "description": "Convert font files into CSS @font-face declarations with embedded Base64 data",
  "keywords": [
    "css",
    "font",
    "face",
    "@font-face",
    "encode",
    "base64",
    "embed",
    "otf",
    "ttf",
    "eot",
    "svg",
    "woff",
    "woff2"
  ],
  "main": "./index.js",
  "author": {
    "name": "Jonathan Perry for Sequence Media Limited",
    "email": "sequencemedia@sequencemedia.net",
    "url": "http://sequencemedia.net"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=12.18.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sequencemedia/make-face.git"
  },
  "scripts": {
    "build": "npm run babel",
    "build:watch": "npm run babel:watch",
    "babel": "babel src -d lib",
    "babel:watch": "npm run babel -- -w",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "pre-commit": "npm run lint && npm run build && git add lib"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "debug": "^4.1.1",
    "fs-extra": "^9.0.1",
    "glob-all": "^3.2.1",
    "mime": "^2.4.6",
    "sacred-fs": "^1.0.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
